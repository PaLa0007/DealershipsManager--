@model CarEditInputModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Update Car</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" method="post" asp-controller="Car" asp-action="Edit">
    <div class="form-group">
        <label asp-for="CarId">Car id</label>
        <input asp-for="CarId" class="form-control" readonly>
        <span asp-validation-for="CarId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer">Manufacturer</label>
        <input asp-for="Manufacturer" class="form-control" placeholder="Manufacturer...">
        <span asp-validation-for="Manufacturer"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input asp-for="Model" class="form-control" placeholder="Model...">
    </div>

    <div class="form-group">
        <label asp-for="Type">Coupe</label>
        <select asp-for="@Model.Type" asp-items="Html.GetEnumSelectList<TypeEnum>()"> </select>
    </div>
    <div class="form-group">
        <label asp-for="Engine">Fuel type</label>
        <select asp-for="@Model.Engine" asp-items="Html.GetEnumSelectList<EngineEnum>()"> </select>
    </div>
    <div class="form-group">
        <label asp-for="Transmission">Transmission</label>
        <select asp-for="@Model.Transmission" asp-items="Html.GetEnumSelectList<TransmissionEnum>()"> </select>
    </div>

    <div class="form-group">
        <label asp-for="Horsepower">Horsepower</label>
        <input asp-for="Horsepower" class="form-control" placeholder="Horsepower...">
    </div>
    <div class="form-group">
        <label asp-for="Gears">Gears</label>
        <input asp-for="Gears" class="form-control" placeholder="Gears...">
    </div>
    <div class="form-group">
        <label asp-for="Color">Color</label>
        <input asp-for="Color" class="form-control" placeholder="Color...">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" placeholder="Price...">
    </div>
    <div class="form-group">
        <label asp-for="IsSold">Is this car sold</label>
        <input asp-for="IsSold" class="form-control" placeholder="IsSold...">
    </div>
    <div class="form-group">
        <label asp-for="UserId">UserId</label>
        <input asp-for="UserId" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="User">User</label>
        <input asp-for="User" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="DealershipId">Dealership id</label>
        <input asp-for="DealershipId" class="form-control" placeholder="Dealership id...">
    </div>


    <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
        <button type="submit" class="btn btn-outline-danger">Edit</button>
        <button class="btn btn-outline-primary" asp-action="Index">Back</button>

    </div>
</form>



