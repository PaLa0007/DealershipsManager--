@model DealershipInputModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create Flight</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" method="post" asp-controller="Flight" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name...">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control" placeholder="Country...">
    </div>
    <div class="form-group">
        <label asp-for="Town">Take off</label>
        <input asp-for="Town" class="form-control" placeholder="Take off...">
    </div>

    <div class="button-holder d-flex justify-content-center">
        <button class="btn btn-outline-primary" type="submit">Add Dealership</button>
    </div>
</form>