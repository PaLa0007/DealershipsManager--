@model DealershipDetailsViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Remove Dealership</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" method="post" asp-controller="Dealership" asp-action="Delete">
    <div class="form-group">
        <label asp-for="DealershipId">DealershipId</label>
        <input asp-for="DealershipId" class="form-control" readonly>
        <span asp-validation-for="DealershipId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Origin</label>
        <input asp-for="Name" class="form-control" placeholder="Name..." disabled>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control" placeholder="Country..." disabled>
    </div>
    <div class="form-group">
        <label asp-for="Town">Take off</label>
        <input asp-for="Town" class="form-control" placeholder="Town..." disabled>
    </div>

    <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
        <button type="submit" class="btn btn-outline-dark">Delete</button>
        <button class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">Cancel</button>
    </div>
</form>

