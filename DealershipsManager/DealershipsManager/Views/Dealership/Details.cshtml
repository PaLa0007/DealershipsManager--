@model DealershipDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>FlightDetailsViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Flight Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DealershipId)
        </dd>
        <dt class="col-sm-2">
            Origin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Destination
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class="col-sm-2">
            Take off time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Town)
        </dd>
        <dt class="col-sm-2">
            Landing time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cars)
        </dd>
    </dl>
</div>
@if (User.IsInRole("Admin"))
{
    <div>
        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.DealershipId">Edit</a>
        <a class="btn btn-outline-primary" asp-action="Index">Back</a>
    </div>
}
else
{
    <div>
        <a class="btn btn-outline-primary" asp-action="Index">Back</a>
    </div>
}

